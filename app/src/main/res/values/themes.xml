<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:textViewStyle">@style/AppText</item>
        <!--        Changes background color of Splash Screen-->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">
            @color/background
        </item>
    </style>

    <style name="AppBottomSheetDialogFragmentTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogFragmentTheme</item>
    </style>

    <style name="AppText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <!-- You can specify other text attributes here, like text color, text size, etc. -->
    </style>

    <style name="AppText.Tab" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/pt_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <!-- You can specify other text attributes here, like text color, text size, etc. -->
    </style>

    <style name="Header.Text" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <!-- You can specify other text attributes here, like text color, text size, etc. -->
    </style>

    <style name="Theme.RecipeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/default_tab_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    //color for the checkbox

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorPrimary">@color/secondary_color</item>
    </style>
</resources>